{
  "name": "note-that-expense-backend",
  "version": "1.0.0",
  "description": "A expense API built with TypeScript, Express, and PostgreSQL",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc && tsc-alias && npm run copy-sql",
    "start": "tsc && npm run copy-sql && npm run migrate:up && tsx dist/index.js",
    "dev:build": "tsc && npm run copy-sql && npm run migrate:up && tsx dist/index.js",
    "dev": "nodemon",
    "copy-sql": "cpx \"src/routes/**/*.sql\" dist/routes",
    "migrate:up": "npx tsx src/services/migrate.ts up",
    "migrate:down": "npx tsx src/services/migrate.ts down",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "test": "vitest run",
    "update:rates": "npx tsx src/scripts/updateExchangeRates.ts"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "camelcase-keys": "^9.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "pino": "^9.7.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cpx": "^1.2.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  },
  "author": "Thomas Jamais",
  "license": "MIT"
}